---
nginx_proxy_params:
    proxy_intercept_errors: 'on'

nginx_pools:
  - name: pool_local
    config: ip_hash
    backends:
      - "supervhost.local:8080"
      - "supervhost.local:8081 weight=2"

nginx_virtualhosts:
- domains:
  - '_'
  listen:
  - "[::]:80    default_server"
  - "[::]:8080  default_server"
  - "[::]:8081  default_server"
  - "80         default_server"
  - "8080       default_server"
  - "8081       default_server"
  root: /opt/defaultvhost

- domains:
  - "supervhost.local"
  - "supervhost.rproxy"
  listen:
  - "[::]:8080"
  - "[::]:8081"
  - "8080"
  - "8081"
  locations:
  - name: '/testlocation'
    type: raw_config
    conf:
      - 'alias /opt/testlocation;'
  root: /opt/supervhost

- domains:
  - "supervhost.proxy"
  listen:
  - "[::]:80"
  - "80"
  locations:
  - name: '/'
    type: rproxy
    backend_name: "supervhost.local:8081"
    proto: http
    dont_forward_domain: yes
  root: /opt/defaultvhost




