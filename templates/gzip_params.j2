# {{ ansible_managed }}
gzip on;
gzip_disable        "msie6";
gzip_vary           {{ nginx_gzip_params.vary | default('on') }};
gzip_proxied        {{ nginx_gzip_params.proxied | default('any') }};
gzip_comp_level     {{ nginx_gzip_params.comp_level | default('6') }};
gzip_buffers        {{ nginx_gzip_params.buffers | default('16 8k') }};
gzip_http_version   {{ nginx_gzip_params.http_version | default('1.1') }};
gzip_min_length     {{ nginx_gzip_params.min_length | default('256') }};
gzip_types          {{ nginx_gzip_params.types | default(['text/plain','text/css','text/xml','text/javascript','application/x-javascript','application/javascript','application/json','application/xml','application/xml+rss'] | join(' ')) }};
